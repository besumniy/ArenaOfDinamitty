<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.little_experimentator.arenaofdinamitty">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Arena of Dinamitty"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArenaOfDinamitty">
        <service
            android:name=".services.WebService"
            android:enabled="true"
            android:exported="false"></service>

        <activity
            android:name=".ShopActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".WarriorsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".FightLoadActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".FightSettingActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MenuActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".FightActivityOld"
            android:screenOrientation="landscape" />
        <activity
            android:name=".WarriorListActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".LoadActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>